<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/id_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="91dp"
        android:layout_toStartOf="@+id/id_noaccount"
        android:text="Username"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/id_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_getusername"
        android:layout_toEndOf="@+id/id_username"
        android:text="Password"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="196dp" />

    <EditText
        android:id="@+id/id_getusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="127dp" />

    <EditText
        android:id="@+id/id_getpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="213dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="230dp" />

    <Button
        android:id="@+id/id_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="174dp"
        android:layout_marginEnd="33dp"
        android:text="Forgot Password"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="288dp" />

    <Button
        android:id="@+id/id_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/id_forgotpassword"
        android:layout_marginStart="85dp"
        android:text="Login"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="351dp" />

    <Button
        android:id="@+id/id_noaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="73dp"
        android:text="Don't have an account"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="351dp" />

    <RadioGroup
        android:id="@+id/id_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/id_radiosso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSO"
            android:onClick="Client"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/id_radiodonor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Donor"
            android:onClick="Client"
            android:textStyle="bold"
            />
    </RadioGroup>
</RelativeLayout>
